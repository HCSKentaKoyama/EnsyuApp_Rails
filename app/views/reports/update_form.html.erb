<div class="container">
    <div class="box-heading">
        受験報告書の編集
    </div>
    <div class="box-body cp_form">
        <div class="cp_form">
            <% if @report.auth_flag == "3" %>
                <h2>コメント　:　<%= @report.teached_comment  %><br/></h2>
                <h2>期限　　　:　<%= @report.due_date %></h2>
            <% end %>
            <%= form_tag("/report/update/recheck",class: "go-bottom") do %>
                <div class="form-group cp_tx">
                    <%= autocomplete_field_tag 'com_name', nil, autocomplete_report_com_name_reports_path,:required => true,:value => "#{@report.com_name}" %>
                    <label>企業名</label>
                </div>
                <div class="form-group cp_tx">
                    <input type = "date" name ="exam_date" value="<%= @report.exam_date %>" class="form-control bootstrap-form" required>
                    <label>日時</label>
                </div>
                <div class="form-group cp_tx">
                    <input type="text" name ="exam_place" value="<%= @report.exam_place %>" class="form-control bootstrap-form" required>
                    <label>受験場所</label>
                </div>
                <div class="form-group cp_ipselect cp_sl01" id="grade">
                    <select required name="exam_grade" class="form-control bootstrap-form">
                        <option value="" hidden>試験区分</option>
                        <option value="0">１次試験</option>
                        <option value="1">２次試験</option>
                        <option value="2">３次試験</option>
                        <option value="3">４次試験</option>
                        <option value="9">最終試験</option>
                    </select>
                </div>
                <div class="form-group cp_ipselect cp_sl01">
                    <select required name="notice_method">
                    <option value="" hidden>合否通知</option>
                    <option value="0">１週間以内に本人</option>
                    <option value="1">２週間以内に本人</option>
                    <option value="2">３週間以内に本人</option>
                    <option value="3">１週間以内に学校</option>
                    <option value="4">２週間以内に学校</option>
                    <option value="5">３週間以内に学校</option>
                    <option value="9">その他</option>
                    </select>
                </div>

                <div class="text-center">
                    <h3>募集方法</h3>
                </div>
                <div class="form-group cp_ipcheck">
                    <%= check_box "exam_method", "0", {checked: @report.exam_method.include?("0"),id: "101"} %>
                    <label for="101">学校斡旋</label>
                    <%= check_box "exam_method", "1", {checked: @report.exam_method.include?("1"),id: "102"} %>
                    <label for="102">斡旋サイト</label>
                    <%= check_box "exam_method", "2", {checked: @report.exam_method.include?("2"),id: "103"} %>
                    <label for="103">企業HP</label>
                    <%= check_box "exam_method", "3", {checked: @report.exam_method.include?("3"),id: "104"} %>
                    <label for="104">新聞雑誌</label>
                    <%= check_box "exam_method", "4", {checked: @report.exam_method.include?("4"),id: "105"} %>
                    <label for="105">ジョブカフェ等</label>
                    <%= check_box "exam_method", "9", {checked: @report.exam_method.include?("9"),id: "106"} %>
                    <label for="106">その他</label>
                </div><br>

                <div class="text-center">
                    <h3>試験内容</h3>
                </div>
                <div class="form-group cp_ipcheck">
                    <%= check_box "exam_content", "0", {checked: @report.exam_content.include?("0"),id: "201"} %>
                    <label for="201">適正</label>
                    <%= check_box "exam_content", "1", {checked: @report.exam_content.include?("1"),id: "202"} %>
                    <label for="202">筆記・作文</label>
                    <%= check_box "exam_content", "2", {checked: @report.exam_content.include?("2"),id: "203"} %>
                    <label for="203">ディスカッション</label>
                    <%= check_box "exam_content", "3", {checked: @report.exam_content.include?("3"),id: "204"} %>
                    <label for="204">グループワーク</label>
                    <%= check_box "exam_content", "4", {checked: @report.exam_content.include?("4"),id: "205"} %>
                    <label for="205">集団面接</label>
                    <%= check_box "exam_content", "5", {checked: @report.exam_content.include?("5"),id: "206"} %>
                    <label for="206">個人面接</label>
                    <%= check_box "exam_content", "9", {checked: @report.exam_content.include?("6"),id: "207"} %>
                    <label for="207">その他</label>
                </div><br>

                <div class="text-center">
                    <h3>試験詳細内容</h3>
                </div>
                <div class="form-group cp_ipcheck">
                    <%= check_box "exam_detail", "0", {checked: @report.exam_detail.include?("0"),id: "301"} %>
                    <label for="301">SPI</label>
                    <%= check_box "exam_detail", "1", {checked: @report.exam_detail.include?("1"),id: "302"} %>
                    <label for="302">CAB/GAB</label>
                    <%= check_box "exam_detail", "2", {checked: @report.exam_detail.include?("2"),id: "303"} %>
                    <label for="303">職業適性</label>
                    <%= check_box "exam_detail", "3", {checked: @report.exam_detail.include?("3"),id: "304"} %>
                    <label for="304">クレペリン</label>
                    <%= check_box "exam_detail", "4", {checked: @report.exam_detail.include?("4"),id: "305"} %>
                    <label for="305">その他適正</label>
                    <%= check_box "exam_detail", "5", {checked: @report.exam_detail.include?("5"),id: "306"} %>
                    <label for="306">一般常識</label>
                    <%= check_box "exam_detail", "6", {checked: @report.exam_detail.include?("6"),id: "307"} %>
                    <label for="307">専門知識</label>
                    <%= check_box "exam_detail", "7", {checked: @report.exam_detail.include?("7"),id: "308"} %>
                    <label for="308">作文</label>
                    <%= check_box "exam_detail", "8", {checked: @report.exam_detail.include?("8"),id: "309"} %>
                    <label for="309">個人面接</label>
                    <%= check_box "exam_detail", "9", {checked: @report.exam_detail.include?("0"),id: "310"} %>
                    <label for="310">集団面接</label>
                    <%= check_box "exam_detail", "a", {checked: @report.exam_detail.include?("a"),id: "311"} %>
                    <label for="311">グループディスカッション</label>
                    <%= check_box "exam_detail", "b", {checked: @report.exam_detail.include?("b"),id: "312"} %>
                    <label for="312">グループワーク</label>
                    <%= check_box "exam_detail", "z", {checked: @report.exam_detail.include?("z"),id: "313"} %>
                    <label for="313">その他</label>
                </div>
                <div class="form-group cp_tx">
                    <textarea name="free_comment" required><%= @report.free_comment %></textarea>
                    <label>自由記述欄</label>
                </div>
                <div class="form-group cp_ipselect cp_sl01">
                    <select  name="result">
                    <option value="" hidden>合否</option>
                    <option value="0">合格</option>
                    <option value="1">不合格</option>
                    </select>
                </div>

                <input type="submit" value="確認" class="cp_btn">
                <input type="hidden" name="id" value="<%= @report.id %>">

            <% end %>
        </div>
    </div>
</div>