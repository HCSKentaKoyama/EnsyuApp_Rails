<div class="container">
    <div class="box-heading">
        検索結果
    </div>
    <div class="box-body cp_form">
        <table class="table table-hover alt-table-responsive">
            <thead>
                <tr>
                    <th class="col-xs-1 col-sm-1 col-md-1 col-lg-1">
                        No.
                    </th>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        試験日
                    </th>
                    <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
                        会社名
                    </th>
                    <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        試験区分
                    </th>
                    <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
                        合否
                    </th>
                </tr>
            </thead>
            <tbody>
                <% cntNo = 1 %>
                <% @reports.each do |report| %>
                    <% strGrade = @hash_grade.fetch(:"#{report.exam_grade}") %>
                    <% strResult = @hash_result.fetch(:"#{report.result}") %>
                    <tr>
                        <th><%= link_to("#{cntNo}","/report/display/#{report.id}") %></th>
                        <th><%= link_to("#{report.exam_date}","/report/display/#{report.id}") %></th>
                        <th><%= link_to("#{report.com_name}","/report/display/#{report.id}") %></th>
                        <th><%= link_to("#{strGrade}","/report/display/#{report.id}") %></th>
                        <th><%= link_to("#{strResult}","/report/display/#{report.id}") %></th>
                    </tr>
                    <% cntNo += 1 %>
                <% end %>
            </tbody>
        </table>
    </div>
</div>