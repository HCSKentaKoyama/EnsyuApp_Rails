<div class="container">
    <div class="box-heading">
        ログイン
    </div>
    <div class="box-body">
        <%= form_tag("/login") do %>
            <div class="form-group">
                <label>ユーザ名</label>
                <input name ="user_id" value="<%= @user_id %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>パスワード</label>
                <input type="password" name ="password" value="<%= @password %>" class="form-control bootstrap-form">
            </div>
            <div class="text-center">
                <input type="submit" value="ログイン" class="btn btn-primary">
            </div>
        <% end %>
    </div>
</div>