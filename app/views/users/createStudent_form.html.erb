<div class="container">
    <div class="box-heading">
        学生登録
    </div>
    <div class="box-body">
        <%= form_tag("/new/student") do %>
            <div class="form-group">
                <label>ユーザID</label>
                <input name ="user_id" value="<%= @user_id %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>パスワード</label>
                <input type="password" name ="password" value="<%= @password %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>クラス番号(例 : R4A101)</label>
                <input name ="class_number" value="<%= @class_number %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>名前</label>
                <input name ="name" value="<%= @name %>" class="form-control bootstrap-form">
            </div>
            <div class="form-group">
                <label>担当教員ID</label>
                <input name ="teacher_id" value="<%= @teacher_id %>" class="form-control bootstrap-form">
            </div>
            <input type="submit" value="新規登録" class="btn btn-primary">
        <% end %>
    </div>
</div>